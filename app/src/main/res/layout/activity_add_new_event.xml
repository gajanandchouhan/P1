<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/reguler"
            android:gravity="center"
            android:text="Enter Event Details"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/textVew_label_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/reguler"
            android:text="Event Title"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_13sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/rounded_gray">

            <EditText
                android:id="@+id/edit_text_event"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textVew_select"
                android:layout_toStartOf="@+id/textVew_select"
                android:background="@android:color/transparent"
                android:fontFamily="@font/reguler"
                android:gravity="center_vertical"
                android:hint="Event Title"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/textVew_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/reguler"
                android:padding="@dimen/_5sdp"
                android:text="Select"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textVew_label_when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/reguler"
            android:text="When"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/rounded_gray"
            android:drawableRight="@drawable/date"
            android:fontFamily="@font/reguler"
            android:gravity="center_vertical"
            android:hint="Date"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textColor="@color/colorLightBlack"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/rounded_gray"
            android:drawableRight="@drawable/date"
            android:fontFamily="@font/reguler"
            android:gravity="center_vertical"
            android:hint="Time"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_10sdp"
            android:textColor="@color/colorLightBlack"
            android:textSize="@dimen/_13sdp" />


        <TextView
            android:id="@+id/textVew_label_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/reguler"
            android:text="Reminder"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_13sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/rounded_gray">

            <EditText
                android:id="@+id/edit_text_reminder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textVew_minute"
                android:layout_toStartOf="@+id/textVew_minute"
                android:background="@android:color/transparent"
                android:digits="0123456789"
                android:fontFamily="@font/reguler"
                android:gravity="center_vertical"
                android:hint="Before Event"
                android:imeOptions="actionDone"
                android:inputType="numberSigned"
                android:maxLength="3"
                android:maxLines="1"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/textVew_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/reguler"
                android:padding="@dimen/_5sdp"
                android:text="in Minute"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_11sdp" />
        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/red_fill_rounded"
            android:text="Add Event"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>
</LinearLayout>