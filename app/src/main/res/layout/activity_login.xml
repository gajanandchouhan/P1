<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:fillViewport="true"
    tools:context="com.superlifesecretcode.app.ui.register.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/layout_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edi_text_phone"
                style="@style/EdiTextStyle"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="@string/mobile_number"
                android:inputType="text" />

            <EditText
                android:id="@+id/edit_text_password"
                style="@style/EdiTextStyle"
                android:layout_marginTop="@dimen/_20sdp"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="@dimen/_5sdp"
                android:hint="@string/password"
                android:inputType="textPassword" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/textView_forgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/reguler"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:text="Forgot Password?"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="@dimen/_11sdp" />

            </RelativeLayout>

            <Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/button_white_elipse"
                android:fontFamily="@font/reguler"
                android:text="Sign in to Continue"
                android:textAllCaps="false"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:id="@+id/ll_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">


                <TextView
                    android:id="@+id/textView_dont_have"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/reguler"
                    android:gravity="center_horizontal"
                    android:text="I Don't have an account?"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/textView_signup"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/reguler"
                    android:text=" Sign Up"
                    android:textColor="@color/colorLightBlack"
                    android:textSize="@dimen/_13sdp" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/layout_signup"
            android:gravity="bottom">

            <TextView
                android:id="@+id/textView_login_with"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/reguler"
                android:text="LOGIN WITH"
                android:textColor="@color/colorLightBlack"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_login_with"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/twitter" />

                <ImageView
                    android:id="@+id/imageView_f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/fb" />

                <ImageView
                    android:id="@+id/imageView_g"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/gmail" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
