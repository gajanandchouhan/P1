<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <include layout="@layout/toolbar2" />

            <com.ramotion.foldingcell.FoldingCell
                android:id="@+id/folding_cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    >



                    <TextView
                        android:id="@+id/tv_order_detail_dialog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:gravity="center_horizontal"
                        android:text="Order Detail"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!--<LinearLayout-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_marginLeft="@dimen/_20sdp"-->
                            <!--android:layout_marginRight="@dimen/_20sdp"-->
                            <!--android:layout_marginTop="@dimen/_3sdp"-->
                            <!--android:orientation="horizontal">-->

                            <!--<TextView-->
                            <!--android:id="@+id/tv_orderid"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_weight="1"-->
                            <!--android:fontFamily="@font/reguler"-->
                            <!--android:gravity="left"-->
                            <!--android:text="Order id:"-->
                            <!--android:textColor="@color/colorBlack"-->
                            <!--android:textSize="@dimen/_10sdp" />-->

                            <!--<TextView-->
                            <!--android:id="@+id/order_id"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_weight="1"-->
                            <!--android:fontFamily="@font/reguler"-->
                            <!--android:gravity="right"-->
                            <!--android:text="288"-->
                            <!--android:textColor="@color/red_bg"-->
                            <!--android:textSize="@dimen/_10sdp" />-->
                            <!--</LinearLayout>-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_group_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="Group Name:"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/group_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="right"
                                    android:text="ABC Group"
                                    android:textColor="@color/red_bg"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_plan"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="Plan"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/plan"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="right"
                                    android:text="1 Month"
                                    android:textColor="@color/red_bg"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_cost"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="Cost:"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/cost"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="right"
                                    android:text="$ 288"
                                    android:textColor="@color/red_bg"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/address_linear_dialog"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tv_user_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="User Name:"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/user_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="right"
                                    android:text="Name"
                                    android:textColor="@color/red_bg"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_email"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="Email:"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/email"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="right"
                                    android:text="xyz123@example.com:"
                                    android:textColor="@color/red_bg"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_mobile"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="Mobile No"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/mobile"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="right"
                                    android:text="xxxxxxxxxx"
                                    android:textColor="@color/red_bg"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_receipt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="Receipt's:"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/dialog_receipt_recyclerview"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_65sdp"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_weight="1"></android.support.v7.widget.RecyclerView>
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/tv_paymentdetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/bold"
                        android:gravity="center_horizontal"
                        android:text="Payment Detail"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_bank_name"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="Bank Name"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/bankname"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="right"
                                    android:text="288"
                                    android:textColor="@color/red_bg"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_accountno"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="Account Number"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/accountno"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="right"
                                    android:text="288"
                                    android:textColor="@color/red_bg"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_paymentmode"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="Payment Mode"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/paymentmode"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="right"
                                    android:text="288"
                                    android:textColor="@color/red_bg"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_payment_date_dialog"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="Payment Date"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/payment_date_dialog"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="right"
                                    android:text="288"
                                    android:textColor="@color/red_bg"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_subtotal"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="SubTotal"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/subtotal"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="right"
                                    android:text="288"
                                    android:textColor="@color/red_bg"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_grand_total"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="left"
                                    android:text="Grand Total"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp" />

                                <TextView
                                    android:id="@+id/grant_total"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/reguler"
                                    android:gravity="right"
                                    android:text="288"
                                    android:textColor="@color/red_bg"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_are_you_sure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/reguler"
                            android:gravity="center"
                            android:padding="@dimen/_20sdp"
                            android:text="Are you sure you want to continue this order?"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_no"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/gray_color"
                                android:fontFamily="@font/reguler"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="No"
                                android:textColor="@color/color_black"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_yes"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/colorPrimary"
                                android:fontFamily="@font/reguler"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="Yes"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@android:color/holo_blue_dark"
                        android:gravity="center"
                        android:text="Title view" />

                </FrameLayout>
            </com.ramotion.foldingcell.FoldingCell>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
