<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurple"
    android:orientation="vertical"
    tools:context="com.superlifesecretcode.app.ui.language.LanguageActivity">

    <ImageView
        android:id="@+id/imageView_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_40sdp"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/textView_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_icon"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="Select Language"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_16sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_label"
        android:layout_marginTop="@dimen/_30sdp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_30sdp"
        android:paddingRight="@dimen/_30sdp">

        <ImageView
            android:id="@+id/imageView_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:rotation="90"
            android:src="@android:drawable/arrow_down_float" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_10sdp"
            android:rotation="-90"
            android:src="@android:drawable/arrow_down_float" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/_15sdp"
        android:text="Next"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13sdp" />


</RelativeLayout>
