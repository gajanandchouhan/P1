                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/reguler"
                            android:gravity="right"
                            android:text="288"
                            android:textColor="@color/red_bg"
                            android:textSize="@dimen/_10sdp" />
