<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.myannouncement.addannouncement.AddAnnouncementActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <TextView
                android:id="@+id/text_view_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/arrow_drop_down"
                android:drawableRight="@drawable/arrow_drop_down"
                android:ellipsize="end"
                android:fontFamily="@font/reguler"
                android:hint="Country"
                android:maxLines="1"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/colorPurple"
                android:textColorHint="@color/colorLightPurple"
                android:textSize="@dimen/_11sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLightPurple" />


            <TextView
                android:id="@+id/text_view_announcment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableEnd="@drawable/arrow_drop_down"
                android:drawableRight="@drawable/arrow_drop_down"
                android:ellipsize="end"
                android:fontFamily="@font/reguler"
                android:hint="Announcement Type"
                android:maxLines="1"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/colorPurple"
                android:textColorHint="@color/colorLightPurple"
                android:textSize="@dimen/_11sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLightPurple" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPurple"
                android:textColorHint="@color/colorLightPurple"
                android:textSize="@dimen/_11sdp">

                <EditText
                    android:id="@+id/input_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:maxLines="1"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_11sdp"
                    android:theme="@style/EdiTextStyle3" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_cc_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPurple"
                android:textColorHint="@color/colorLightPurple"
                android:textSize="@dimen/_11sdp">

                <EditText
                    android:id="@+id/input_ccmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/reguler"
                    android:hint="CC Email"
                    android:maxLines="1"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_11sdp"
                    android:theme="@style/EdiTextStyle3" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPurple"
                android:textColorHint="@color/colorLightPurple"
                android:textSize="@dimen/_11sdp">

                <EditText
                    android:id="@+id/input_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/reguler"
                    android:gravity="start"
                    android:hint="Description"
                    android:maxLines="3"
                    android:minLines="3"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_11sdp"
                    android:theme="@style/EdiTextStyle3" />
            </android.support.design.widget.TextInputLayout>


            <TextView
                android:id="@+id/text_view_pick_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/add_images"
                android:drawableRight="@drawable/drop_down"
                android:ellipsize="end"
                android:fontFamily="@font/reguler"
                android:hint="Image"
                android:maxLines="1"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/colorPurple"
                android:textColorHint="@color/colorLightPurple"
                android:textSize="@dimen/_11sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLightPurple" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPurple"
                android:textColorHint="@color/colorLightPurple"
                android:textSize="@dimen/_11sdp">

                <EditText
                    android:id="@+id/input_venue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/reguler"
                    android:hint="Venue"
                    android:maxLines="1"
                    android:padding="@dimen/_8sdp"
                    android:textSize="@dimen/_11sdp"
                    android:theme="@style/EdiTextStyle3" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/text_view_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/date"
                        android:drawableRight="@drawable/date"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/reguler"
                        android:hint="Start Date"
                        android:maxLines="1"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/colorPurple"
                        android:textColorHint="@color/colorLightPurple"
                        android:textSize="@dimen/_11sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorLightPurple" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/text_view_start_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/time"
                        android:drawableRight="@drawable/time"
                        android:ellipsize="end"
                        android:fontFamily="@font/reguler"
                        android:hint="Start Time"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/colorPurple"
                        android:textColorHint="@color/colorLightPurple"
                        android:textSize="@dimen/_11sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorLightPurple" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/text_view_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/date"
                        android:drawableRight="@drawable/date"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/reguler"
                        android:hint="End Date"
                        android:maxLines="1"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/colorPurple"
                        android:textColorHint="@color/colorLightPurple"
                        android:textSize="@dimen/_11sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorLightPurple" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/text_view_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/time"
                        android:drawableRight="@drawable/time"
                        android:ellipsize="end"
                        android:fontFamily="@font/reguler"
                        android:hint="End Time"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_8sdp"
                        android:textColor="@color/colorPurple"
                        android:textColorHint="@color/colorLightPurple"
                        android:textSize="@dimen/_11sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorLightPurple" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_add"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/red_fill_rounded"
                android:text="Add Announcement"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_13sdp" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>