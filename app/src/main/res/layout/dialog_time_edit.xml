<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:padding="@dimen/_15sdp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textVew_label_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/reguler"
        android:text="Reminder Before Event"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/_13sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/rounded_gray">

        <EditText
            android:id="@+id/edit_text_reminder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textVew_minute"
            android:layout_toStartOf="@+id/textVew_minute"
            android:background="@android:color/transparent"
            android:digits="0123456789"
            android:fontFamily="@font/reguler"
            android:gravity="center_vertical"
            android:hint="Before Event"
            android:imeOptions="actionDone"
            android:inputType="numberSigned"
            android:maxLength="3"
            android:maxLines="1"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:textColor="@color/colorLightBlack"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/textVew_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/reguler"
            android:padding="@dimen/_5sdp"
            android:text="in Minute"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="@dimen/_11sdp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/red_fill_rounded"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13sdp" />
</LinearLayout>